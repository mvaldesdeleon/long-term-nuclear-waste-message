{
  "manifest_version": 3,
  "name": "Long-term nuclear waste warning messages",
  "version": "1.0",
  "description": "Replace Twitter.com warning about content from blocked accounts with a more meaningful message.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}